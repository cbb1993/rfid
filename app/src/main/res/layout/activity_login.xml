<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <include layout="@layout/view_title" />

    <ImageView
        android:layout_width="244dp"
        android:layout_height="137.3dp"
        android:layout_marginTop="19.3dp"
        android:src="@mipmap/logo" />

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginTop="19.3dp"
        android:background="@drawable/shape_edit">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/login_user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="26dp"
            android:src="@mipmap/login_user" />
        <EditText
            android:id="@+id/et_name"
            android:paddingLeft="12dp"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/login_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginTop="19.3dp"
        android:background="@drawable/shape_edit">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/login_psd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="26dp"
            android:src="@mipmap/login_password" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:paddingLeft="12dp"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/login_psd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <CheckBox
            android:button="@null"
            android:id="@+id/checkbox_visible"
            android:layout_marginEnd="29dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_psd"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="47dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:button="@null"
            android:id="@+id/checkbox_remember"
            android:background="@drawable/selector_remember"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_marginStart="6dp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_psd"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/login"
        android:background="@drawable/shape_button"
        android:layout_marginTop="56dp"
        android:layout_width="316dp"
        android:layout_height="44dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_version"
            android:textSize="13sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>